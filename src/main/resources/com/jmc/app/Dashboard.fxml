<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.layout.AnchorPane?>

<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.jmc.app.Controllers.DashboardController"
            prefHeight="400.0" prefWidth="600.0">

    <top>
        <HBox fx:id="topContainer" style="-fx-background-color: #DAECFB;" spacing="20" alignment="CENTER">
            <FontAwesomeIconView glyphName="HOME" size="30" style="-fx-fill: #35495a"/>
            <FontAwesomeIconView glyphName="FILE_TEXT" size="30" style="-fx-fill: #35495a"/>
        </HBox>
    </top>

    <center>
        <VBox fx:id="centerContainer" spacing="10" alignment="CENTER">
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="mainAccountButton" text="Create Main Account" style="-fx-background-color: #DAECFB; -fx-text-fill: #35495a;">
                    <graphic>
                        <FontAwesomeIconView glyphName="USER" size="20" style="-fx-fill: #35495a"/>
                    </graphic>
                </Button>
                <Label fx:id="mainAccountLabel" text="Establish your main account to manage all transactions." wrapText="true">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </HBox>
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="createSpaceButton" text="Create Space" style="-fx-background-color: #DAECFB; -fx-text-fill: #35495a;">
                    <graphic>
                        <FontAwesomeIconView glyphName="LAYERS" size="20" style="-fx-fill: #35495a"/>
                    </graphic>
                </Button>
                <Label fx:id="createSpaceLabel" text="Create separate spaces for saving and spending." wrapText="true">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </HBox>
            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="orderCardButton" text="Order Card" style="-fx-background-color: #DAECFB; -fx-text-fill: #35495a;">
                    <graphic>
                        <FontAwesomeIconView glyphName="CREDIT_CARD" size="20" style="-fx-fill: #35495a"/>
                    </graphic>
                </Button>
                <Label fx:id="orderCardLabel" text="Order a new card for your account or additional users." wrapText="true">
                    <font>
                        <Font size="12.0"/>
                    </font>
                </Label>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <AnchorPane fx:id="bottomContainer" prefHeight="50.0" prefWidth="600.0" style="-fx-background-color: #DAECFB;">
            <Label fx:id="statusLabel" text="Initialer Status" layoutX="10" layoutY="10" prefWidth="580" prefHeight="30" />
        </AnchorPane>
    </bottom>
</BorderPane>
